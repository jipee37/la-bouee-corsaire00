{% extends 'base.html.twig' %}

{% block title %}Messagerie{% endblock %}

{% block body %}

	<h1>{{ block('title') }}</h1>

	<div class="row">

		<div class="col-md-6">

			<h2>Messages reçus</h2>
			{% for message in messages_received %}

				<div class='panel panel-default'>
					<div class="panel-heading">
						<a href='/task/show/{{ message.transaction.task.id }}'>
							{{ message.transaction.task.title }}
						</a>
						-
						envoyé par {{ message.author.username }} le {{ message.date.format('j/m/Y') }}
					</div>
					<a href='/message/show/{{ message.id }}'>
						<div class="panel-body">
							<p>{{ message.content }}</p>
						</div>
					</a>
				</div>

			{% endfor %}

		</div>

		<div class="col-md-6">

			<h2>Messages Envoyés</h2>
			{% for message in messages_sent %}

				<div class='panel panel-default'>
					<div class="panel-heading">
						<a href='/task/show/{{ message.transaction.task.id }}'>
							{{ message.transaction.task.title }}
						</a>
						-
						envoyé à {{ message.dest.username }} le {{ message.date.format('j/m/Y') }}
					</div>
					<a href='/message/show/{{ message.id }}'>
						<div class="panel-body">
							<p>{{ message.content }}</p>
						</div>
					</a>
				</div>

			{% endfor %}

		</div>

	</div>

{% endblock %}
