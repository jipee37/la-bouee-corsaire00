				{{ form_widget(form.region, {'attr': {
					'class': 'form-control',
					'placeholder': form.region.vars.label
				}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.city, null) }}
				{{ form_errors(form.city) }}
				{{ form_widget(form.city, {'attr': {
					'class': 'form-control',
					'placeholder': form.city.vars.label
				}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.phone, null) }}
				{{ form_errors(form.phone) }}
				{{ form_widget(form.phone, {'attr': {
					'class': 'form-control',
					'placeholder': form.phone.vars.label
				}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.current_password, null) }}
				{{ form_errors(form.current_password) }}
				{{ form_widget(form.current_password, {'attr': {
					'class': 'form-control'
				}}) }}
			</div>

			<button type="submit" class="btn">
				{{ 'profile.edit.submit'|trans }}
			</button>

		{{ form_end(form) }}
	</div>

{% endblock body %}
