{% endblock %}

{% block body %}

	{{ parent() }}

	<div class="col-sm-4 col-sm-offset-4">
		{{ form_start(form, {'method': 'post', 'action': path('fos_user_profile_edit'), 'attr': {
			'class': 'fos_user_profile_edit r-form register-form'
		}}) }}

			<div class="form-group">
				{{ form_label(form.email, null) }}
				{{ form_errors(form.email) }}
				{{ form_widget(form.email, {'attr': {
					'class': 'form-control',
					'placeholder': form.email.vars.label
				}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.name, null) }}
				{{ form_errors(form.name) }}
				{{ form_widget(form.name, {'attr': {
					'class': 'form-control',
					'placeholder': form.name.vars.label
				}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.surname, null) }}
				{{ form_errors(form.surname) }}
				{{ form_widget(form.surname, {'attr': {
					'class': 'form-control',
					'placeholder': form.surname.vars.label
				}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.adress, null) }}
				{{ form_errors(form.adress) }}
				{{ form_widget(form.adress, {'attr': {
					'class': 'form-control',
					'placeholder': form.adress.vars.label
				}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.region, null) }}
